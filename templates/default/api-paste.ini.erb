<%
node['moniker']['api_paste'].each do |section, properties|
  _buf << "[#{section}]\n"

  properties.each do |key, value|
    if value.nil? or (value.kind_of?(Array) and value.empty?)
      next
    elsif value.kind_of?(Array)
      _buf << "#{key} = #{value.join(', ')}\n"
    else
      _buf << "#{key} = #{value}\n"
    end
  end

  _buf << "\n"
end
-%>
